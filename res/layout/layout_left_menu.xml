<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#68A8F2">
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:gravity="center_horizontal|bottom"
        android:background="@drawable/menu_bg">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:text="用户名"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <Button 
            android:id="@+id/btn_open_detection_activity"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="新 建 检 测"
            android:layout_marginTop="25dp"
            android:textSize="20sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:background="@drawable/menu_btn_bg"/>
        <Button 
            android:id="@+id/btn_open_analyze_activity"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="对 比 分 析"
            android:layout_marginTop="25dp"
            android:textSize="20sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:background="@drawable/menu_btn_bg"/>
        <Button 
            android:id="@+id/btn_open_patient_activity"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="患 者 管 理"
            android:layout_marginTop="25dp"
            android:textSize="20sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:background="@drawable/menu_btn_bg"/>
        <Button 
            android:id="@+id/btn_open_type_activity"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="类 型 管 理"
            android:layout_marginTop="25dp"
            android:textSize="20sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:background="@drawable/menu_btn_bg"/>
        <Button 
            android:id="@+id/btn_open_setting_activity"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="用 户 设 置"
            android:layout_marginTop="25dp"
            android:textSize="20sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:background="@drawable/menu_btn_bg"/>
    </LinearLayout>
    
</LinearLayout>
